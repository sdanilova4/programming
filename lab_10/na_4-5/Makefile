CC = gcc #используемый компилятор C
# -Wall    — включить основные предупреждения
# -Wextra  — включить дополнительные предупреждения
# -std=c11 — использовать стандарт языка C11
CFLAGS = -Wall -Wextra -std=c11 #предупреждения и стандарт языка

TARGET = program # Имя питогового исполняемого файла
SRCS = main_func.c other_func.c # Список исходных файлов на языке C
OBJS = $(SRCS:.c=.o) # замена расширения .c на .o

all: $(TARGET) # Цель по умолчанию (выполняется при вызове make без аргументов)

# Сборка исполняемого файла из объектных файлов
# Если хотя бы один .o изменился — программа будет пересобрана
$(TARGET): $(OBJS)
	$(CC) $(OBJS) -o $(TARGET)

# любой файл .o создаётся из соответствующего .c
# $< — имя первого зависимого файла (исходника .c)
%.o: %.c
	$(CC) $(CFLAGS) -c $<

# удаляются объектные файлы и исполняемый файл
clean:
	rm -f $(OBJS) $(TARGET)